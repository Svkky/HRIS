@page
@model HRIS.WebUI.Pages.Auth.LoginModel
@{
    Layout = "_AccountLayout";
    var isverified = HttpContext.Session.GetString("verified");
}
<div class="middle-box text-center loginscreen animated fadeInDown" style="background-image: url('/appimages/InventoryBg.jpg'); background-size: cover;">
    <div id="ibox1">
        <div class="ibox-content ">
            <div>
                @*<img src="~/appimages/InventoryBg.jpg" style="width:200px; height:150px;" class="logo-name" />*@

            </div>
            <partial name="InventoryFiles/_LoginLoader" />
            <h3>Welcome to Inventory Manager</h3>

            <p> Login in to see it in action.</p>
            <form class="m-t" role="form" method="post" asp-page="/Auth/Login" name="SubmitLoginForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" id="txtLoginEmail" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" id="txtLoginPassword" class="form-control" placeholder="Password" required>
                </div>
                <button type="submit" id="btnLogin" class="btn btn-primary block full-width m-b">Login</button>

                <a asp-action="ForgotPassword" asp-controller="Authentication"><small>Forgot password?</small></a>


            </form>
            <p class="m-t"> <small>ICMA Professional Services&copy; 2021</small> </p>
        </div>

    </div>
</div>

@if (isverified != null)
{

    <script>
    setTimeout(function () {
        toastr.options = {
            closeButton: true,
            progressBar: true,
            showMethod: 'slideDown',
            timeOut: 20000,
        };
        toastr.success('Password added successfully', 'Email verification completed');

    }, 300);
    </script>
}

