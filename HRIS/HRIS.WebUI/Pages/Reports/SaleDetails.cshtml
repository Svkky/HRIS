@page
@model HRIS.WebUI.Pages.Reports.SaleDetailsModel
@{
}




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <p><strong>Sales  Details</strong></p>
                    <div class="text-right">
                        <a asp-page="/Reports/Sales" class="btn btn-warning btn-sm text-right" type="button"><i class="fa fa-backward"></i>&nbsp; Go Back</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Bill Number</td>
                                    <td>@Model.BillNumber </td>
                                </tr>
                                <tr>
                                    <td>Total Vat</td>
                                    <td>@Model.TotalVat </td>
                                </tr>
                                <tr>
                                    <td>Total Discount</td>
                                    <td>@Model.TotalDiscount </td>
                                </tr>
                                <tr>
                                    <td>Total Amount</td>
                                    <td>@Model.TotalAmount </td>
                                </tr>

                                <tr>
                                    <td>Transaction Date</td>
                                    <td>@Model.DatePaid </td>
                                </tr>


                            </tbody>

                        </table>
                    </div>
                    <div id="ibox1">
                        <div class="ibox-content">


                            <div id="salesDetailsReportContainer"></div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div id="cover-spin"></div>
    </div>
</div>

@section Scripts {

    <script src="~/appscripts/saledetailReport.js" asp-append-version="true"></script>
}