@page
@model HRIS.WebUI.Pages.Setup.StoreSetupModel
@{
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Store Setup</h5>
                </div>
                <div class="ibox-content">
                    <button class="btn btn-primary btn-sm" id="AddStore" style="display:none" type="button" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>&nbsp;Add New</button>
                    <br /><br />
                    <div class="table-responsive">

                        <div id="storeContainer"></div>

                        <div id="myModal" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"><h3 class="m-t-none m-b">Add Store</h3></div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-sm-12 ">
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Store</label>
                                                        <input placeholder="Enter  Store Name" class="form-control" id="storeNameAdd">
                                                    </div>
                                                </form>

                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input placeholder="Enter Store Email" class="form-control" id="storeEmailAdd">
                                                    </div>
                                                </form>
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label> Phone Number</label>
                                                        <input placeholder="Enter Store Phone Number" class="form-control" id="storePhoneAdd">
                                                    </div>
                                                </form>
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <input placeholder="Enter Store Address" class="form-control" id="storeAddressAdd">
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit" id="btn-AddStore"><strong>Submit</strong></button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div id="Mod" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"><h3 class="m-t-none m-b">Edit Store Setup</h3></div>
                                    <div class="modal-body">
                                        <div class="row">

                                            <div class="col-sm-12 ">
                                                <form role="form">
                                                    <input type="hidden" id="storeSetupId" />
                                                    <div class="form-group"><label>StoreName</label> <input placeholder="Enter  StoreName" class="form-control" id="storeName"></div>

                                                </form>

                                                <form role="form">
                                                    <input type="hidden" id="StoreEmail" />
                                                    <div class="form-group"><label>Email</label> <input readonly placeholder="Enter Store Email " type="email" class="form-control" id="storeEmail"></div>

                                                </form>
                                                <form role="form">
                                                    <input type="hidden" id="StorePhone" />
                                                    <div class="form-group"><label>Phone Number</label> <input placeholder="Enter Store Phone Number" type="number" class="form-control" id="storePhone"></div>

                                                </form>
                                                <form role="form">
                                                    <input type="hidden" id="StoreAddress" />
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <input placeholder="Enter Store Address" class="form-control" id="storeAddress">
                                                    </div>

                                                </form>

                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit" id="btn-EditStore"><strong>Update</strong></button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div id="cover-spin"></div>
</div>

@section Scripts {
    <script src="~/appscripts/StoreSetup.js" asp-append-version="true"></script>
}