@page
@model HRIS.WebUI.Pages.Setup.SubCategoryModel
@{
    var categorySelectList = (SelectList)ViewData["States"];
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Sub Category Setup</h5>
                </div>

                <partial name="InventoryFiles/_LoginLoader" />
                <div id="ibox1">
                    <div class="ibox-content">
                        <button class="btn btn-primary btn-sm" type="button" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>&nbsp;Add New</button>
                        <br /><br />

                        <div id="subCategoryContainer"></div>
                        <div id="myModal" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"> <h3 class="m-t-none m-b">Add Sub Category</h3></div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-sm-12 ">

                                                <form role="form">

                                                    <div class="form-group">
                                                        <label>Category</label> <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categoryies,"categoryId","description"))"  class="chosen-select form-control">
                                                            <option value="">--Select Category--</option>

                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Sub Category</label>
                                                        <input placeholder="Sub Category"  asp-for="Description" required class="form-control">
                                                    </div>

                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit" id="btn-AddSubCategory"><strong>Submit</strong></button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div id="editSubCategoryModal" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"> <h3 class="m-t-none m-b">Edit Sub Category</h3></div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-sm-12 ">

                                                <form role="form">
                                                    <input type="hidden" id="SubCategoryId" />
                                                    <div class="form-group">
                                                        <label>Category</label> <select asp-items="@(new SelectList(Model.Categoryies,"categoryId","description"))" id="editSubCategory_CategoryId" class="chosen-select form-control">
                                                            <option value="">--Select Category--</option>

                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Sub Category</label>
                                                        <input placeholder="Sub Category" required id="editSubCategory_Description" class="form-control">
                                                    </div>

                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="btn-SubmitEditCategory" type="submit"><strong>Update</strong></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div id="cover-spin"></div>
</div>


@section Scripts {
    <script src="~/appscripts/subcategory.js" asp-append-version="true"></script>
}
