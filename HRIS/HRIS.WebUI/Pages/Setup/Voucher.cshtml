@page
@model HRIS.WebUI.Pages.Setup.VoucherModel
@{
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Voucher Management</h5>
                </div>
                <div class="ibox-content">
                    <button class="btn btn-primary btn-sm" type="button" data-toggle="modal" data-target="#VoucherModal"><i class="fa fa-plus"></i>&nbsp;Add New</button>
                    <br /><br />
                    <div class="table-responsive">

                        <div id="VoucherContainer"></div>

                        <div id="VoucherModal" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"><h3 class="m-t-none m-b">Add Voucher</h3></div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-sm-12 ">
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Voucher Name <span class="text-danger">*</span></label>
                                                        <input placeholder="Enter Voucher Name" onkeyup="EnableButton()" class="form-control" id="VoucherAdd">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Voucher Amount <span class="text-danger">*</span></label>
                                                        <input placeholder="Enter Voucher Amount" onkeyup="EnableButton()" class="form-control money" id="VoucherAmount">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Expire Date <span class="text-danger">*</span></label>
                                                        <input type="date" class="form-control"onkeyup="EnableButton()" id="VoucherExpireDate">
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit" id="btn-AddVoucher"><strong>Submit</strong></button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div id="EditVoucherModal" class="modal fade" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header"><h3 class="m-t-none m-b">Edit Voucher</h3></div>
                                    <div class="modal-body">
                                        <div class="row">

                                            <div class="col-sm-12 ">
                                                <form role="form">
                                                    <input type="hidden" id="VoucherId" />
                                                    <div class="form-group">
                                                        <label>Voucher Name <span class="text-danger">*</span></label>
                                                        <input placeholder="Enter  Voucher Name" onkeyup="EnableButtonEdit()" class="form-control" id="VoucherEdit">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Voucher Amount <span class="text-danger">*</span></label>
                                                        <input placeholder="Enter  Voucher Amount" onkeyup="EnableButtonEdit()" class="form-control money" id="VoucherAmountEdit">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Expire Date <span class="text-danger">*</span></label>
                                                        <input type="date" class="form-control" onkeyup="EnableButtonEdit()" id="VoucherExpireEdit">
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit" id="btn-EditVoucher"><strong>Update</strong></button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div id="cover-spin"></div>
</div>

@section Scripts {
    <script>
        document.getElementById("btn-AddVoucher").disabled = true;
        function EnableButton() {
            var enable = true;
            var nameValid = $('#VoucherAdd').val();
            var amountValid = $('#VoucherAmount').val();
            var dateValid = $('#VoucherExpireDate').val();
            if (nameValid === "" || amountValid === "" || dateValid === "") {
                enable = false;
            }
            if (enable) {
                document.getElementById("btn-AddVoucher").disabled = false;
            } else {
                document.getElementById("btn-AddVoucher").disabled = true;
            }
        }
        function EnableButtonEdit() {
            var enable = true;
            var nameValid = $('#VoucherEdit').val();
            var amountValid = $('#VoucherAmountEdit').val();
            var dateValid = $('#VoucherExpireEdit').val();
            if (nameValid === "" || amountValid === "" || dateValid === "") {
                enable = false;
            }
            if (enable) {
                document.getElementById("btn-EditVoucher").disabled = false;
            } else {
                document.getElementById("btn-EditVoucher").disabled = true;
            }
        }    </script>
    <script src="~/appscripts/voucher.js" asp-append-version="true"></script>
}