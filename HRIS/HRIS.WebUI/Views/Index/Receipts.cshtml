@model HRIS.Application.DTOs.Sales.SalesVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pos Receipts</title>
    <link href="~/css/Receipt.css" rel="stylesheet" />
</head>
<body>
    <div id="invoice-POS">

        <center id="top">
            <div class="logo"></div>
            <div class="info">
                <h2>@Model.StoreName (@Model.BranchName)</h2>
            </div><!--End Info-->
        </center><!--End InvoiceTop-->

        @if (Model.Fullname != "")
        {
            <div id="mid">
                <div class="info">
                    <h2>Contact Info</h2>
                    <p>
                        Customer Name   : @Model.Fullname <br />
                        Phone   : @Model.PhoneNumber<br />
                    </p>
                </div>
            </div>
        }
        else
        {
            <div id="mid">
                <div class="info">
                    <h2>Contact Info</h2>
                    <p>
                        Customer Name   : N/A <br />
                        Phone   : N/A<br />
                    </p>
                </div>
            </div>
        }
        <div id="mid">
            <div class="info">
                <h2>Sales Info</h2>
                @if (Model.ReceiptNumber != null)
                {
            <p>
                Bill Number   : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font:bold"><strong>@Model.BillNumber</strong></span><br />
                Receipt Number: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp<span style="font:bold"><strong>@Model.ReceiptNumber</strong></span><br />
                Date Paid:  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font:bold"><strong>@Model.DatePaid</strong></span><br />


            </p>
                }
                else
                {
                    <p>
                        Bill Number   : @Model.BillNumber<br /><br />
                        Phone   : @Model.PhoneNumber<br /><br />
                        Date Paid: @Model.DatePaid<br />


                    </p>
                }
            </div>
        </div><!--End Invoice Mid-->

        <div id="bot">

            <div id="table">
                <table>
                    <tr class="tabletitle">
                        <td class="item"><h2>Item</h2></td>
                        <td class="Hours"><h2>Qty</h2></td>
                        <td class="Rate"><h2>Sub Total</h2></td>
                    </tr>
                    @foreach (var item in Model.SalesDetailVm)
                    {
                        <tr class="service">
                            <td class="tableitem"><p class="itemtext">@item.Name</p></td>
                            <td class="tableitem"><p class="itemtext">@item.Quantity</p></td>
                            <td class="tableitem"><p class="itemtext">@item.SubTotal</p></td>
                        </tr>
                    }




                    <tr class="tabletitle">
                        <td></td>
                        <td class="Rate"><h2>VAT</h2></td>
                        <td class="payment"><h2>@Model.TotalVat</h2></td>
                    </tr>

                    <tr class="tabletitle">
                        <td></td>
                        <td class="Rate"><h2>Discount</h2></td>
                        <td class="payment"><h2>@Model.TotalDiscount</h2></td>
                    </tr>
                    <tr class="tabletitle">
                        <td></td>
                        <td class="Rate"><h2>Total Amount</h2></td>
                        <td class="payment"><h2>@Model.TotalAmount</h2></td>
                    </tr>
                    <tr class="tabletitle">
                        <td></td>
                        <td class="Rate"><h2>Total Paid</h2></td>
                        <td class="payment"><h2>@Model.TotalPaid</h2></td>
                    </tr>
                    <tr class="tabletitle">
                        <td></td>
                        <td class="Rate"><h2>Change</h2></td>
                        <td class="payment"><h2>@Model.Change</h2></td>
                    </tr>

                </table>
            </div><!--End Table-->

            <div id="legalcopy">
                <p class="legal">
                    <strong>Thank you for your patronage!</strong>  we hope to see you again
                </p>
            </div>

        </div><!--End InvoiceBot-->
    </div><!--End Invoice-->
</body>
</html>


